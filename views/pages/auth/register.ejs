<%- include('../../templates/header')  %> 
    <div class="h-screen  flex flex-wrap flex-col justify-center content-center ">
        <div class="w-full md:w-96 bg-white bg-opacity-10 border border-white border-opacity-10 rounded-lg p-8 ">
            
            <form method="POST">
                <div class="text-center">
                    <p class="text-lg font-bold">Sign up</p>
                </div>
                <div class="flex flex-col flex-wrap my-3">
                    <label class="text-white pb-2 font-semibold" for="username">Username</label>
                    <input type="text" class="text-gray-800 px-4 py-2 outline-none rounded-md focus:ring-2" name="username" id="username" placeholder="Username">
                </div>
                <div class="flex flex-col flex-wrap my-3">
                    <label class="text-white pb-2 font-semibold"for="password">Password</label>
                    <input type="password" class="text-gray-800 px-4 py-2 outline-none rounded-md focus:ring-2" name="password" id="password" placeholder="Password">
                </div>
                <div class="flex flex-col flex-wrap my-3">
                    <label class="text-white pb-2 font-semibold" for="confirm_password">Confirm Password</label>
                    <input type="password" class="text-gray-800 px-4 py-2 outline-none rounded-md focus:ring-2" name="confirm_password" id="confirm_password" placeholder="Confirm password">
                </div>
                <div class="flex flex-col flex-wrap my-3">
                    <label class="text-white pb-2 font-semibold"for="email">Email address</label>
                    <input type="email" class="text-gray-800 px-4 py-2 outline-none rounded-md focus:ring-2 " name="email" id="email" placeholder="E-mail address">
                </div>
                <div class="flex flex-col flex-wrap my-3">
                    <button type="submit" class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-md cursor-pointer transition transition-all">Sign up</button>
                </div>
                
            </form>
        </div>
    </div>
<%- include('../../templates/footer')  %> 

        
